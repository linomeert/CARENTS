<%= simple_form_for [conversation, message], url: conversation_messages_path(conversation, message, params: {conversation_id: conversation.id}), method: "post" do |f| %>
      <%= f.input :content, inline_label: 'Say hi!', as: :string, label: false%>
      <%= f.submit "Send", class: "btn btn-primary" %>
<% end %>

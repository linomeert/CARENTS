<div class="container">
 <div class="user-container">
    <div class="toggle">
      <h1>Meet <span>Carents</span> <br>make <span>Friends</span> <br>organise <span>Playdates</span></h1>
      <div>
        <%= image_tag "markermap.png" %>
        <label id="maptoggle">
          <input type="checkbox">
          <span id="map_toggle_l" class="slider round"></span>
         </label>
      </div>
    </div>

     <div
       id="map"
       class="hide"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
     ></div>
   <div class="cards">
     <% @users.each do |user| %>
     <%= link_to user_path(id: user.id) do %>
       <div class="usercards">
         <div class="card-image" style="background-image:url(<%= user.photo %>)">
           <span class="viewprofile">View profile</span>
         </div>
         <div class="userbio">
            <h4><%= user.last_name %> family</h4>
            <p><%= user.address %></p>


         </div>
         <div class="card-footer">
          <div class="kid_count">
            <% user.children.count.times do %>
              <i class="fas fa-child"></i>
            <% end %>
          </div>
          <div class="specialities">
            <ul>

              <% user.children.each do |child| %>
                  <% child.conditions.each do |condition| %>
                    <li><%= condition.name %></li>
                  <% end %>
              <% end %>
            </ul>
          </div>
         </div>
       </div>
       <% end %>
     <% end %>
   </div>
 </div>
</div>

<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
  </div>
  <div class="footer-copyright">
    <h4> Make <i class="far fa-handshake"></i> friends </h4>
  </div>
</div>

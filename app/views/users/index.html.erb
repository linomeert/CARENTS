<div class="container">
 <div class="user-container">
    <div class="toggle">
      <h1>Meet Carents, Make friends</h1>
      <div>
        <%= image_tag "markermap.png", style: "width: 50px;" %>
        <label id="maptoggle">
          <input type="checkbox">
          <span id="map_toggle_l" class="slider round"></span>
         </label>
      </div>
    </div>

     <div
       id="map"
       class="hide"
       data-markers="<%= @markers.to_json %>"
       data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
     ></div>
   <div class="cards">
     <% @users.each do |user| %>
     <%= link_to user_path(id: user.id) do %>
       <div class="usercards">
         <div class="card-image" style="background-image:url(<%= user.photo %>)"></div>
         <div class="userbio">
            <h3><%= user.last_name %> family</h3>
            <p><%= user.address %></p>
           <% if user.children.count == 1 %>
             <p><%= user.children.count %> child</p>
           <% else %>
             <p><%= user.children.count %> children</p>
           <% end %>
           <ul>
             <% user.children.each do |child| %>
                 <% child.conditions.each do |condition| %>
                   <li><%= condition.name %></li>
                 <% end %>
             <% end %>
           </ul>
         </div>
       </div>
       <% end %>
     <% end %>
   </div>
 </div>
</div>
